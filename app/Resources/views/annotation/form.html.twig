{% extends 'base.html.twig' %}
{% block title %}Annotation Form{% endblock %}
{% block body %}
<h1>Annotation <small>Form</small></h1>
<form action="" method="POST">
    <div class="form-body">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" name="subject" value="{{ app.request.get('uri')|url_decode }}" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label>Property</label>
                        <input type="text" name="property" value="" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label>Object</label>
                        <input type="text" name="object" value="" class="form-control">
                    </div>
                </div>  
                <div class="row">
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" name="description" value="" class="form-control">
                    </div>
                </div>  
            </div>
        </div>
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-default">
    </div>
</form>
                

{% endblock %}  
{% block javascripts %}            
{% endblock %}
{% block stylesheets %}
{% endblock %} 
