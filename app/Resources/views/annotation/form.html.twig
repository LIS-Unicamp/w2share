{% extends 'base.html.twig' %}
{% block title %}Annotation Form{% endblock %}
{% block body %}
<h1>Annotation <small>Form</small></h1>
        
<a href="{{ path('workflow-'~app.request.get('artefact'), { 'process': app.request.get('uri')|url_decode }) }}" class="btn btn-sm btn-info"><i class="glyphicon glyphicon-arrow-left"> {{ app.request.get('artefact')|capitalize }}</i></a>

<form action="" method="POST">
    <div class="form-body">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" name="subject" value="{{ app.request.get('uri')|url_decode }}" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label>Property</label>
                        <select name="property" class="form-control">
                            {% for term in ontology %}
                                <option value="{{ term }}">{{ term }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <label>Object</label>
                        <input type="text" name="object" value="{{ object|url_decode }}" class="form-control">
                    </div>
                </div>                  
            </div>
        </div>
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-default">
    </div>
</form>
                

{% endblock %}  
{% block javascripts %}            
{% endblock %}
{% block stylesheets %}
{% endblock %} 
