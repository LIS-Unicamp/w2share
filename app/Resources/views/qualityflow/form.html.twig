{% extends 'base.html.twig' %}
{% block title %}Add Quality Dimension{% endblock %}
{% block body %}    
<div class="dropdown">
  <button class="btn btn-primary dropdown-toggle"
          type="button" data-toggle="dropdown">Select workflow <span class="caret"></span></button>
  
    <ul class="dropdown-menu">
      {% for wf in workflows %} 
        <li value=""><a href="#">{{ wf.title }}</a>  </li>
      {% endfor %}
    </ul>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <!--<th style="width:100px">Action</th>-->
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <!-- TO-DO: Recuperar sÃ³ as informacoes do workflow selecionado -->
            <tr>
                <td>Dummy</td>
                <td>Dummy</td>
                <td>Dummy</td>
            </tr>
        </tbody>
    </table>
</div>

<h2>Add <small>quality dimension</small></h2>
{{ form_start(form) }}
    <div class="form-body">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, { 'attr': { 'class':'form-control' } }) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, { 'attr': { 'class':'form-control' } }) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        {{ form_label(form.valueType) }}
                        {{ form_widget(form.valueType, { 'attr': { 'class':'form-control' } }) }}
                        {{ form_errors(form.valueType) }}
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="form-actions">
            {{ form_widget(form.save) }}
    </div>
    {{ form_end(form) }}
</form>
                

{% endblock %}  
{% block javascripts %}
{% endblock %}
{% block stylesheets %}
{% endblock %} 
