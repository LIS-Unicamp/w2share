{% extends 'base.html.twig' %}
{% block title %}Add Quality Dimension{% endblock %}
{% block body %}

<div>
<h2>{% if qualityDimension.uri %}Edit{% else %}Add{% endif %} <small>quality dimension</small></h2>
{{ form_start(form) }}
    <div class="form-body">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr': { 'class':'form-control' } }) }}
                    {{ form_errors(form.name) }}
                </div>
             </div>
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, { 'attr': { 'class':'form-control' } }) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.valueType) }}
                    {{ form_widget(form.valueType, { 'attr': { 'class':'form-control' } }) }}
                    {{ form_errors(form.valueType) }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-actions">
        
            
            {% if qualityDimension.uri %} 
                {{ form_widget(form.save, { 'label':'Edit' }) }} 
                <a class="btn btn-primary" href="{{ path('qualitydimension-add') }}">Add</a> 
            {% else %}
                {{ form_widget(form.save, { 'label':'Add' }) }}
            {% endif %}
    </div>
    {{ form_end(form) }}
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <!--<th style="width:100px">Action</th>-->
                <th>Action</th>
                <th>Name</th>
                <th>Description</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            {% for index,qd in app.session.get('qualityDimensions')%}
            <tr>
                <td>
                    <a href="{{ path('qualitydimension-edit', { 'qualitydimension_uri':qd.uri|url_encode }) }}"><i class="glyphicon glyphicon-edit"></i></a>
                    <a href="{{ path('qualitydimension-delete', { 'qualitydimension_uri':qd.uri|url_encode }) }}"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
                <td>{{ qd.name }}</td>
                <td> {{qd.description}} </td>
                <td> {{qd.valueType}} </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
            
{% endblock %}  
{% block javascripts %}
{% endblock %}
{% block stylesheets %}
{% endblock %} 
