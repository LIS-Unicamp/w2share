{% extends 'base.html.twig' %}
{% block title %}Add Quality Metric{% endblock %}
{% block body %}

<div>
<h2>{% if qualityMetric.uri %}Edit{% else %}Add{% endif %} <small>quality metric</small></h2>
{{ form_start(form) }}
    <div class="form-body">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert"></button>
                    {{ flashMessage }}
            </div>            
        {% endfor %}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.metric) }}
                    {{ form_widget(form.metric, { 'attr': { 'class':'form-control' } }) }}
                    {{ form_errors(form.metric) }}
                </div>
             </div>
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, { 'attr': { 'class':'form-control' } }) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-actions">
        {% if qualityMetric.uri %} 
            {{ form_widget(form.save, { 'label':'Edit' }) }} 
            <a class="btn btn-primary" href="{{ path('add-qualitymetric-annotation') }}">Add</a> 
        {% else %}
            {{ form_widget(form.save, { 'label':'Add' }) }}
        {% endif %}
        <a href="{{ path('qualitymetrics-annotations') }}" class="btn btn-info">List</a>
    </div>
    {{ form_end(form) }}
</div>
    
{% endblock %}  
{% block javascripts %}
{% endblock %}
{% block stylesheets %}
{% endblock %} 