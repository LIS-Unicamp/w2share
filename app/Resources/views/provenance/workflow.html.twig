{% extends 'base.html.twig' %}
{% block title %}Workflows Run{% endblock %}
{% block body %}
    <h1>Workflow <small>{{ workflow }}</small></h1>
<h2>Processes</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Process</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
    {% for row in result2 %}
        <tr>
            <td>{{ row.label }}</td>
            <td><a href="{{ path('provenance-process', { 'process': row.process|url_encode }) }}">Details</a></td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
</div>

<h2>Workflow Runs</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Workflow Run</th>
                <th>Start Time</th>
                <th>End Time</th>
            </tr>
        </thead>
        <tbody>
    {% for row in result1 %}
        <tr>
            <td><a href="{{ path('provenance-workflow-run', { 'workflow_run': row.workflowRun|url_encode }) }}">{{ row.workflowRun }}</a></td>
            <td>{{ row.startedAtTime }}</a></td>
            <td>{{ row.endedAtTime }}</td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
</div>

<h2>Inputs</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
    {% for row in inputs %}
        <tr>
            <td>{{ row.label }}</a></td>
            <td>{{ row.description }}</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">No input.</td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
</div>
    
<h2>Outputs</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
    {% for row in outputs %}
        <tr>
            <td>{{ row.label }}</a></td>
            <td>{{ row.description }}</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">No output.</td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}  
{% block javascripts %}            
{% endblock %}
{% block stylesheets %}
{% endblock %} 
