{% extends 'base.html.twig' %}
{% block title %}Workflows{% endblock %}
{% block body %}
    <h1>Workflows</h1>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Workflow</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
{% for row in result %}
    <tr>
        <td>{{ row.s }}</td>
        <td><a href="{{ path('workflow', { 'workflow': row.s|url_encode }) }}">Details</a> | <a href="{{ path('workflows-run', { 'workflow': row.s|url_encode }) }}">Runs</a></td>
    </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}  
{% block javascripts %}            
{% endblock %}
{% block stylesheets %}
{% endblock %} 
