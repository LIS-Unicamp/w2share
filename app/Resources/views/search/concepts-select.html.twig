<form class="navbar-form navbar-left" action="{{ path("search-query") }}" method="GET">
    <div class="form-group">
        <input name="query" value="{{ query }}" type="text" class="form-control" placeholder="Search">
    </div>
    
    <div class="form-group">
        <select name="concept" class="form-control select" style="width:300px">
            {% for row in result %}
                <option value="{{ row.concept.value }}" {% if row.concept.value == concept %}selected{% endif %}>{{ row.concept.value }}</option>
            {% endfor %}
        </select>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
