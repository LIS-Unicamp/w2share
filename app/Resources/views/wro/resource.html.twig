{% extends 'base.html.twig' %}
{% block title %}WRO Resource{% endblock %}
{% block body %}
 
<ol class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Home</a></li>
    <li><a href="{{ path('wro-details', { 'wro_uri': resource.wro.uri|url_encode() }) }}">WRO</a></li>
    <li class="active">Resource</li>
</ol>
{{ include('wro/wro-info.html.twig', { 'wro': resource.wro }) }}    
    
<h2>Resource <small>Details
        <button class="btn btn-xs copy" data-clipboard-text="{{ resource.uri }}">
                <i class="glyphicon glyphicon-copy"></i>
            </button>
            <a href="{{ path('wro-resource-download', { 'resource_uri':resource.uri|url_encode() }) }}" title="Download Resource"><i class="glyphicon glyphicon-download"></i></a>
            <a href="{{ path('wro-resource-edit', { 'resource_uri':resource.uri|url_encode() }) }}" title="Edit Resource"><i class="glyphicon glyphicon-edit"></i></a>
        </small>
</h1>
<ul>
    <li><strong>Description:</strong> {{ resource.description }}</li>
    <li><strong>Filename:</strong> {{ resource.filename }}</li>
</ul>

{% if resource.type|split('#')|last == "Image" %}
<h3>Abstract Workflow</h3>
<a href="{{ app.request.basepath }}/uploads/documents/w2share/{{ resource.wro.hash }}/{{ resource.filename }}"><img src="{{ app.request.basepath }}/uploads/documents/w2share/{{ resource.wro.hash }}/{{ resource.filename }}" style="max-width: 1300px"></a>
{% endif %}

{% if resource.type|split('#')|last == "Script" %}
<h3>Script</h3>
<pre class="brush: bash">
{{ resource.fileContent }}
</pre>
{% endif %}
{% endblock %}  
{% block javascripts %}  
    <!-- Include required JS files -->
<script src="http://agorbatchev.typepad.com/pub/sh/3_0_83/scripts/shCore.js" type="text/javascript"></script>
<script src="http://agorbatchev.typepad.com/pub/sh/3_0_83/scripts/shBrushBash.js" type="text/javascript"></script>
<!-- Finally, to actually run the highlighter, you need to include this JS on your page -->
<script type="text/javascript">
     SyntaxHighlighter.all();
</script>
{% endblock %}
{% block stylesheets %}
<!-- Include *at least* the core style and default theme -->
<link href="http://alexgorbatchev.com/pub/sh/current/styles/shCore.css" rel="stylesheet" type="text/css" />
<link href="http://alexgorbatchev.com/pub/sh/current/styles/shThemeDefault.css" rel="stylesheet" type="text/css" />
{% endblock %} 