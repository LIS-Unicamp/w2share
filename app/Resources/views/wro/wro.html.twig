{% extends 'base.html.twig' %}
{% block title %}Workflow Research Object{% endblock %}
{% block body %}
{% if wro.scriptConversion %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Home</a></li>
        <li><a href="{{ path('script-converter-details', { 'hash': wro.scriptConversion.hash }) }}">Script Converter</a></li>
        <li class="active">Workflow Research Object</li>
    </ol>
{% endif %}
<h1>WRO<small>
            <button class="btn btn-xs copy" data-clipboard-text="{{ wro.uri }}">
                <i class="glyphicon glyphicon-copy"></i>
            </button>           
        </small>
</h1>
<ul>
    <li><strong>Creator:</strong> {{ wro.creator }}</li>
    <li><strong>Description:</strong> {{ wro.description }}</li>
    <li><strong>Title:</strong> {{ wro.title }}</li>
</ul>

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
            <button class="close" data-dismiss="alert"></button>
            {{ flashMessage }}
    </div>            
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger">
            <button class="close" data-dismiss="alert"></button>
            {{ flashMessage }}
    </div>            
{% endfor %}
<h2>Resources</h2>
<a href="{{ path('wro-resource-add', { 'wro_uri':wro.uri|url_encode() }) }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> New</a>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:100px">Action</th>
                <th>File</th>
                <th>Title</th>  
                <th>Type</th> 
                <th>Description</th>                               
            </tr>
        </thead>
        <tbody>
    {% for resource in pagination %}
        <tr>   
            <td>
                <a href="{{ resource.uri }}" title="Go to resource details"><i class="glyphicon glyphicon-search"></i></a>
                <a href="{{ path('wro-resource-edit', { 'resource_uri':resource.uri|url_encode()}) }}" title="Edit resource"><i class="glyphicon glyphicon-edit"></i></a>
                <a href="{{ path('wro-resource-delete', { 'resource_uri':resource.uri|url_encode()}) }}" title="Delete resource" class="delete"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
            <td>{{ resource.folder }}/{{ resource.filename }}</td> 
            <td>{{ resource.title }}</td>
            <td>{{ resource.type }}</td>
            <td>{{ resource.description }}</a></td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        {{ app_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}  
{% block javascripts %}            
{% endblock %}
{% block stylesheets %}
{% endblock %} 
