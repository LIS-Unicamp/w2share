{% extends 'base.html.twig' %}
{% block title %}Workflow Research Object{% endblock %}
{% block body %}
<h1>Workflow Research Object<small>
            <button class="btn btn-xs copy" data-clipboard-text="{{ wro.uri }}">
                <i class="glyphicon glyphicon-copy"></i>
            </button>           
        </small>
</h1>
<ul>
    <li><strong>Creator:</strong> {{ wro.creator }}</li>
    <li><strong>Description:</strong> {{ wro.description }}</li>
    <li><strong>Title:</strong> {{ wro.title }}</li>
</ul>
{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
            <button class="close" data-dismiss="alert"></button>
            {{ flashMessage }}
    </div>            
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger">
            <button class="close" data-dismiss="alert"></button>
            {{ flashMessage }}
    </div>            
{% endfor %}
<h2>Resources</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:100px">Action</th>
                <th>File</th>                
                <th>Description</th>
                <th>Type</th>                
            </tr>
        </thead>
        <tbody>
    {% for resource in pagination %}
        <tr>   
            <td><a title="Go to annotations"><i class="glyphicon glyphicon-search"></i></a></td>
            <td>{{ resource.folder }}/{{ resource.filename }}</td> 
            <td>{{ resource.type }}</td>
            <td>{{ resource.description }}</a></td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        {{ app_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}  
{% block javascripts %}            
{% endblock %}
{% block stylesheets %}
{% endblock %} 
